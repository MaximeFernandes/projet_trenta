{% extends 'base.html.twig' %}

{% block title %}Projet Trenta - Produit en vente{% endblock %}

{% block body %}
<nav class="navbar navbar-dark bg-dark text-white">
  	<a class="navbar-brand " href="#">Projet Trenta - Liste des produits en vente</a>
</nav>

<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="row row-cols-1 row-cols-md-2 row-cols-lg-4 justify-content-center">
	{% for product in products %}
    <div class="card">
        <img src="{{ asset('/image/' ~ product.image ) }}" class="card-img-top h-50" alt="...">
        <div class="card-body">
            <h5 class="card-title text-capitalize">{{ product.title }}</h5>
            <p class="card-text text-justify">{{ product.description }}</p>
        </div>
        <div class="card-footer">
            <p class="card-text text-right font-weight-bold">Prix: {{product.price}} â‚¬</p>
        </div>
    </div>
    {% endfor %}
</div>

{% endblock %}
